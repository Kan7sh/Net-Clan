<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefineFragment"
    android:backgroundTint="#ffffff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Availability"
        android:textColor="@color/navyBlue"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:background="@drawable/spinner_background"
        android:dropDownWidth="300dp"
        android:dropDownHorizontalOffset="-10dp"
        android:dropDownVerticalOffset="35dp"
        android:gravity="center"
        android:padding="8dp"
        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Add Your Status"
        android:textColor="@color/navyBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:gravity="start|top"
        android:hint="Hi community! I am open to new connections"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:textColorHint="@color/navyBlue"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="318dp"
        android:layout_marginBottom="417dp"
        android:text="0/250"
        android:textColor="@color/navyBlue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Hyper Local Distance"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/navyBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />


    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="visible"
        app:labelStyle="@style/Tooltip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376"
        app:thumbRadius="6dp"
        app:tickVisible="false"
        app:trackHeight="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="337dp"
        android:text="1km"
        android:textColor="@color/navyBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="55dp"
        android:text="100km"
        android:textColor="@color/navyBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="288dp"
        android:fontFamily="sans-serif-medium"
        android:text="Select Purpose"
        android:textColor="@color/navyBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.035">

        <ToggleButton
            android:id="@+id/rb1"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Coffee"
            android:textOn="Coffee"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb2"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Business"
            android:textOn="Business"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb3"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Hobbies"
            android:textOn="Hobbies"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb4"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Friendship"
            android:textOn="Friendship"

            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ToggleButton
            android:id="@+id/rb5"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Movies"
            android:textOn="Movies"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb6"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Dinning"
            android:textOn="Dinning"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb7"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Dating"
            android:textOn="Dating"
            android:textSize="10dp" />

        <ToggleButton
            android:id="@+id/rb8"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color"
            android:textOff="Matrimony"
            android:textOn="Matrimony"
            android:textSize="10dp"

            />


    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save &amp; Explore"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.102" />

</androidx.constraintlayout.widget.ConstraintLayout>