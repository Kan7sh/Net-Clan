<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/invite"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:text="+INVITE"
                android:textColor="@color/navyBlue"
                android:layout_marginEnd="18dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanish Chhabra"
                android:textSize="16dp"
                android:textColor="@color/navyBlue"
                android:layout_below="@+id/invite"
                android:layout_marginStart="70dp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amritsar"
                android:textSize="13dp"
                android:layout_below="@+id/name"
                android:layout_marginStart="70dp"/>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="120dp"
                android:id="@+id/bar"
                android:layout_height="25dp"
                android:layout_below="@+id/city"
                app:trackThickness="12dp"
                android:layout_marginStart="70dp"
                android:progressTint="@color/navyBlue"
                android:progress="50"
                android:layout_marginTop="5dp"
                app:trackCornerRadius="51dp"/>
            <!--            <ProgressBar
                            android:id="@+id/bar"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:indeterminate=""
                            android:progressTint="@color/navyBlue"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/city"
                            android:layout_marginStart="90dp"
                            android:progress="50"
                            android:padding="20dp"
                            android:background="@drawable/rounded_corners"/>-->
            <TextView
                android:id="@+id/purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee | Business | Friendship"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/navyBlue"
                android:layout_below="@+id/bar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Hi community! I am open to new connections"
                android:layout_below="@+id/purpose"
                android:layout_marginStart="20dp"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_marginTop="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="35dp"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>